<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="220dp"
    android:paddingVertical="@dimen/common_padding_small"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/card"
        app:cardCornerRadius="@dimen/common_padding_micro"
        app:cardElevation="@dimen/common_padding_default"
        android:layout_marginStart="@dimen/common_padding_small"
        android:layout_marginBottom="@dimen/common_padding_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/animeImage"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="0dp"
                android:layout_weight="8"
                />

            <TextView
                android:id="@+id/animeName"
                android:layout_width="match_parent"
                tools:text="Char Name g"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textSize="14sp"
                android:textColor="@color/foreground"
                android:textAlignment="center"
                android:layout_height="0dp"
                android:layout_weight="1.1" />

            <TextView
                android:id="@+id/animeType"
                android:layout_width="match_parent"
                tools:text="ANIME"
                android:textColor="@color/accent"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_height="0dp"
                android:layout_weight="0.9" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>